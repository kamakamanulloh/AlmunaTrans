<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView

            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Informasi Pribadi"

            android:id="@+id/info"
            android:textStyle="bold"
            android:textColor="@color/navy_blue.primary"
            android:textSize="14sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/info"
            android:textAlignment="textEnd"
            android:textColor="@android:color/holo_green_dark"
            android:text="Ubah"
            android:id="@+id/txtubah"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:gravity="end" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/info"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin">

            <RelativeLayout
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nama"
                    android:text="Nama Lengkap"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:id="@+id/tvnama"
                    android:text="user"
                    android:layout_toRightOf="@id/nama"
                    android:gravity="end" />
                <View
                    android:id="@+id/garis2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="2dp"
                    android:layout_below="@id/nama"
                    android:background="@color/gray_bd" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/jk"
                    android:text="Jenis Kelamin"
                    android:layout_below="@id/garis2"
                    android:layout_marginTop="2dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:id="@+id/tvjk"

                    android:layout_below="@id/garis2"
                    android:text="Laki-laki"
                    android:layout_toRightOf="@id/jk"
                    android:gravity="end" />

                <View
                    android:id="@+id/garis3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="2dp"
                    android:layout_below="@id/jk"
                    android:background="@color/gray_bd" />



                <View
                    android:id="@+id/garis4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="2dp"
                    android:layout_below="@id/jk"
                    android:background="@color/gray_bd"/>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/alamat"
                    android:text="Alamat"
                    android:layout_below="@id/garis4"
                    android:layout_marginTop="2dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:id="@+id/tvalamat"
                    android:layout_below="@id/garis4"
                    android:text="Jombang"
                    android:layout_toRightOf="@id/alamat"
                    android:gravity="end" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Informasi Akun"
            android:layout_below="@id/card1"

            android:id="@+id/akun"
            android:textStyle="bold"
            android:textColor="@color/navy_blue.primary"
            android:textSize="14sp"
            />


        <androidx.cardview.widget.CardView
            android:id="@+id/card2"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/akun"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin">

            <RelativeLayout
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_margin="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/user"
                    android:text="Username Login"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:id="@+id/tvusername"
                    android:text="3517"
                    android:layout_toRightOf="@id/noid"
                    android:gravity="end" />
                <View
                    android:id="@+id/garis55"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="2dp"
                    android:layout_below="@id/user"
                    android:background="@color/gray_bd" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/noid"
                    android:layout_below="@id/garis55"
                    android:text="Nomor ID"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:id="@+id/tvnoid"
                    android:text="3517"
                    android:layout_margin="2dp"
                    android:layout_below="@id/garis55"
                    android:layout_toRightOf="@id/noid"
                    android:gravity="end" />
                <View
                    android:id="@+id/garis5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="2dp"
                    android:layout_below="@id/noid"
                    android:background="@color/gray_bd" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/email"
                    android:text="Alamat Email"
                    android:layout_below="@id/garis5"
                    android:layout_marginTop="2dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:id="@+id/tv_email"
                    android:layout_below="@id/garis5"
                    android:text="user@gmail.com"
                    android:layout_toRightOf="@id/email"
                    android:gravity="end" />

                <View
                    android:id="@+id/garis6"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="2dp"
                    android:layout_below="@id/email"
                    android:background="@color/gray_bd" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/notelp"
                    android:text="Nomor Telepon"
                    android:layout_below="@id/garis6"
                    android:layout_marginTop="2dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:id="@+id/tv_telp"
                    android:layout_below="@id/garis6"
                    android:text="0896"
                    android:layout_toRightOf="@id/notelp"
                    android:gravity="end" />


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@color/white"
            android:text="Pusat Bantuan"
            android:id="@+id/bnthelp"

            android:layout_below="@id/card2"/>

        <Button
            android:id="@+id/btnpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bnthelp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:background="@color/white"
            android:text="Ganti Sandi"
            />

        <Button
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnpassword"
            android:background="@color/red"
            android:text="Keluar Akun"
            android:textColor="@color/white"
            android:id="@+id/btn_logout"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_logout"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_alignParentBottom="true"
            android:text="Versi Aplikasi 1.0"
            android:textAlignment="center"
            android:textStyle="bold"
            android:gravity="center_horizontal" />


    </RelativeLayout>


</androidx.core.widget.NestedScrollView>