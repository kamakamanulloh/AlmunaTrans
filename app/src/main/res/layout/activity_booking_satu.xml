            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imgseat"
                    android:src="@drawable/ic_airline_seat_recline_extra_black_24dp"/>
                <TextView
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Penumpang 1"
                    android:layout_toRightOf="@id/imgseat"
                    android:textSize="16sp"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"


                    android:textColor="@color/black"
                    android:textStyle="bold"

                 />

                <View
                    android:id="@+id/garis2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="2dp"
                    android:layout_below="@id/imgseat"
                    android:background="@color/black" />




                    <Spinner
                        android:editable="false"
                        android:id="@+id/spn_id"
                        android:layout_below="@id/imgseat"
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:padding="5dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_toRightOf="@id/spn_id"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imgseat">

                    <com.google.android.material.textfield.TextInputEditText

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_noid"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:singleLine="true"
                        android:editable="false"
                        android:hint="No ID" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout

                    android:layout_width="match_parent"
                    android:id="@+id/penumpang"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/spn_id">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_nmpenumpang"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:singleLine="true"
                        android:editable="false"
                        android:hint="Nama Penumpang" />
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/penumpang"
                    android:text="Penumpang di bawah 18 tahun dapat mengisi dengan tanggal lahir atau tanda pengenal lainnya"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>


