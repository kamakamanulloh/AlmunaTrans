<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    app:cardCornerRadius="10dp"
    android:id="@+id/card"

    app:cardElevation="5dp"


    android:background="#fff"
    android:layout_height="wrap_content">
    
    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"

        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        
        >
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_armada"
            android:text="bus"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/holo_blue_light"
            style="TextSpec"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_armada"
            android:gravity="end"
            android:id="@+id/tv_harga"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_light"
            style="TextSpec"
            android:textSize="16sp"
            android:text="Harga"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_kelas"
            android:text="kelas"
            android:layout_below="@id/tv_armada"
            android:layout_marginTop="10dp"
           style="@style/TextSpec.Field"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_kelas"
            android:gravity="end"
            android:layout_below="@id/tv_harga"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_green_light"

            style="@style/TextSpec.Value"
            android:id="@+id/tv_tersedia"

            android:textSize="16sp"
            android:text="Tersedia"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_rute"
            android:text="Madura - Jakarta"
            android:layout_below="@id/tv_kelas"
            android:layout_marginTop="10dp"
            style="@style/TextSpec.Field"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_waktu"
            android:text="10.00 - 23.00"
            android:layout_below="@id/tv_rute"
            android:layout_marginTop="10dp"
            style="@style/TextSpec.Field"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_durasi"
            android:layout_below="@id/tv_waktu"
            android:layout_marginTop="10dp"
            style="@style/TextSpec.Field"
            android:text="durasi 3j"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_durasi"
            android:layout_marginTop="10dp"
            android:text="Lanjutkan"
            android:id="@+id/btn_lanjut"
            android:textColor="@color/whiteTextColor"
            android:background="@drawable/button_background_blue"/>
        
    </RelativeLayout>

</androidx.cardview.widget.CardView>