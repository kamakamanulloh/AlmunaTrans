<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DCDCDC"
    tools:context=".Booking.Booking4Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#DCDCDC"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/detail_perjalanan"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="16sp"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"

            tools:ignore="ObsoleteLayoutParam,RtlHardcoded" />

        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"

            app:cardCornerRadius="10dp"

            app:cardElevation="5dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"

            android:layout_marginBottom="@dimen/activity_horizontal_margin"


            android:background="#fff"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="@dimen/activity_horizontal_margin">
                    <TextView
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:id="@+id/tv_trayek"
                        android:textStyle="bold"
                        android:layout_below="@id/tv_armada"
                        android:layout_alignParentStart="true"
                        android:textSize="14sp"
                        android:text="@string/trayek"
                        android:layout_alignParentLeft="true" />
                    <TextView
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:background="#EF9E74"
                        android:textAlignment="center"
                        android:text="Nama Armada"
                        android:id="@+id/tv_armada"
                        android:textColor="@color/whiteTextColor"
                        android:gravity="center_horizontal" />

                    <View
                        android:id="@+id/garis"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="2dp"
                        android:layout_below="@id/tv_trayek"
                        android:background="@color/black" />

                </RelativeLayout>



                <LinearLayout
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/garis"
                    android:weightSum="3" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Berangkat"
                            android:layout_margin="5dp"
                            android:id="@+id/tv_berangkat"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="jam"
                            android:textStyle="bold"
                            android:id="@+id/tv_jam_berangkat"
                            android:textColor="@color/black"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lama Perjalanan :"
                            android:layout_margin="5dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="24 jam"
                            android:textStyle="bold"
                            android:id="@+id/tv_estimasi"
                            android:textColor="@color/black"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kelas"
                            android:layout_margin="5dp"
                            android:id="@+id/tv_kelas"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Harga"
                            android:textStyle="bold"
                            android:id="@+id/tv_harga"
                            android:textColor="@android:color/holo_blue_dark"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="5dp"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Kode"
                        android:textAlignment="center"
                        android:gravity="center_horizontal" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Kode"
                        android:layout_marginRight="5dp"
                        android:textAlignment="center"
                        android:id="@+id/tvkode"
                        android:gravity="center_horizontal" />
                </LinearLayout>





            </LinearLayout>



        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:visibility="gone"
            android:id="@+id/card_kembali"

            android:layout_width="match_parent"

            app:cardCornerRadius="10dp"

            app:cardElevation="5dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"

            android:layout_marginBottom="@dimen/activity_horizontal_margin"


            android:background="#fff"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="@dimen/activity_horizontal_margin">
                    <TextView
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:id="@+id/tv_trayek_kembali"
                        android:textStyle="bold"
                        android:layout_below="@id/tv_armada_kembali"


                        android:textSize="14sp"
                        android:text="trayek"
                        android:layout_alignParentLeft="true"
                        />
                    <TextView
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:background="#EF9E74"
                        android:textAlignment="center"
                        android:text="Nama Armada"
                        android:id="@+id/tv_armada_kembali"
                        android:textColor="@color/whiteTextColor"
                        android:gravity="center_horizontal" />

                    <View
                        android:id="@+id/garis_kembali"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="2dp"
                        android:layout_below="@id/tv_trayek_kembali"
                        android:background="@color/black" />

                </RelativeLayout>



                <LinearLayout
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/garis"
                    android:weightSum="3" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Berangkat"
                            android:layout_margin="5dp"
                            android:id="@+id/tv_berangkat_kembali"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="jam"
                            android:textStyle="bold"
                            android:id="@+id/tv_jam_berangkat_kembali"
                            android:textColor="@color/black"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lama Perjalanan :"
                            android:layout_margin="5dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="24 jam"
                            android:textStyle="bold"
                            android:id="@+id/tv_estimasi_kembali"
                            android:textColor="@color/black"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kelas"
                            android:layout_margin="5dp"
                            android:id="@+id/tv_kelas_kembali"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Harga"
                            android:textStyle="bold"
                            android:id="@+id/tv_harga_kembali"
                            android:textColor="@android:color/holo_blue_dark"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="5dp"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Kode"
                        android:textAlignment="center"
                        android:gravity="center_horizontal" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Kode"
                        android:layout_marginRight="5dp"
                        android:textAlignment="center"
                        android:id="@+id/tvkode_kembali"
                        android:gravity="center_horizontal" />
                </LinearLayout>



            </LinearLayout>



        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detail Harga"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="16sp"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"

            tools:ignore="ObsoleteLayoutParam" />


        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"

            app:cardCornerRadius="5dp"

            app:cardElevation="5dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"

            android:layout_marginBottom="@dimen/activity_horizontal_margin"


            android:background="#fff"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Total Harga + Kode Unik"
                    android:id="@+id/tv_harga_"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    />

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Total Harga"
                    android:id="@+id/tv_all_harga"
                    android:textColor="@color/text_blue"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:gravity="end" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detail Kontak"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="16sp"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"

            tools:ignore="ObsoleteLayoutParam" />


        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"

            app:cardCornerRadius="10dp"

            app:cardElevation="5dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"

            android:layout_marginBottom="@dimen/activity_horizontal_margin"


            android:background="#fff"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Lengkap"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="User"
                    android:id="@+id/tv_nm"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alamat Email"

                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="user@gmail.com"
                    android:textStyle="bold"
                    android:id="@+id/tv_email"
                    android:textColor="@color/black"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No HP"

                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0896"
                    android:textStyle="bold"
                    android:id="@+id/tv_nohp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detail Penumpang"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="16sp"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"

            tools:ignore="ObsoleteLayoutParam" />

        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"

            app:cardCornerRadius="10dp"

            app:cardElevation="5dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"

            android:layout_marginBottom="@dimen/activity_horizontal_margin"


            android:background="#fff"
            android:layout_height="wrap_content">
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imgseat"
                    android:src="@drawable/ic_airline_seat_recline_extra_black_24dp"/>
                <TextView
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Penumpang 1"
                    android:layout_toRightOf="@id/imgseat"
                    android:textSize="16sp"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"


                    android:textColor="@color/black"
                    android:textStyle="bold"

                    />

                <View
                    android:id="@+id/garis2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="2dp"
                    android:layout_below="@id/imgseat"
                    android:background="@color/black" />




                <Spinner
                    android:editable="false"
                    android:id="@+id/spn_id"
                    android:layout_below="@id/imgseat"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:padding="5dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_toRightOf="@id/spn_id"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imgseat">

                    <com.google.android.material.textfield.TextInputEditText

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_noid"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:singleLine="true"
                        android:editable="false"
                        android:hint="No ID" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout

                    android:layout_width="match_parent"
                    android:id="@+id/penumpang"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/spn_id">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_nmpenumpang"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:singleLine="true"
                        android:editable="false"
                        android:hint="Nama Penumpang" />
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/penumpang"
                    android:text="Penumpang di bawah 18 tahun dapat mengisi dengan tanggal lahir atau tanda pengenal lainnya"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"

            app:cardCornerRadius="10dp"

            app:cardElevation="5dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"

            android:layout_marginBottom="@dimen/activity_horizontal_margin"


            android:background="#fff"
            android:layout_height="wrap_content">
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imgseat2"
                    android:src="@drawable/ic_airline_seat_recline_extra_black_24dp"/>
                <TextView
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Penumpang 2"
                    android:layout_toRightOf="@id/imgseat2"
                    android:textSize="16sp"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"


                    android:textColor="@color/black"
                    android:textStyle="bold"

                    tools:ignore="HardcodedText,RtlHardcoded" />

                <View
                    android:id="@+id/garis3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="2dp"
                    android:layout_below="@id/imgseat2"
                    android:background="@color/black" />




                <Spinner

                    android:id="@+id/spn_id2"
                    android:entries="@array/jenisid"
                    android:layout_below="@id/imgseat2"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:padding="5dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_toRightOf="@id/spn_id2"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imgseat2"
                    tools:ignore="NotSibling,RtlHardcoded">

                    <com.google.android.material.textfield.TextInputEditText

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_noid2"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:singleLine="true"

                        android:hint="No ID"
                        tools:ignore="HardcodedText" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout

                    android:layout_width="match_parent"
                    android:id="@+id/penumpang2"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/spn_id2">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_nmpenumpang2"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:inputType="text"
