<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".almunapay.TopUpFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/line"
        android:layout_width="match_parent"

        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:background="@color/colorPrimary"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:id="@+id/tvsaldo"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="24sp"
            android:text="Saldo Anda \n 10.0000"
            android:textAlignment="center"
            android:gravity="center_horizontal" />




    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="ISI NOMINAL (RP)"
        android:layout_below="@id/line"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:textStyle="bold"
        android:id="@+id/tvnominal"
        android:textColor="@color/quantum_grey"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvnominal"

        android:textStyle="bold"
        android:textSize="20sp"
        android:inputType="number"
        android:id="@+id/txtnominal"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linee"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_below="@id/txtnominal"
        android:layout_marginTop="5dp"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:id="@+id/btn50ribu"

                android:src="@drawable/ic_server_storage"/>
            <TextView
                android:layout_marginTop="5dp"
                android:text="Rp 50.000"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn100ribu"

                android:src="@drawable/ic_database"/>
            <TextView
                android:layout_marginTop="5dp"
                android:text="Rp 100.000"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn150ribu"

                android:src="@drawable/ic_database1"/>
            <TextView
                android:layout_marginTop="5dp"
                android:text="Rp 150.000"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn200ribu"

                android:src="@drawable/ic_database2"/>
            <TextView
                android:layout_marginTop="5dp"
                android:text="Rp 200.000"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>






    </LinearLayout>

    <TextView
        android:layout_below="@id/linee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="5dp"
        android:id="@+id/tvmetode"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:text="Pilih Metode Pembayaran"/>



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvmetode"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@drawable/bg_button_blue"
        android:text="  Via Transfer"

        android:drawableLeft="@drawable/ic_transfer"
        android:id="@+id/btntf"
        android:textAlignment="textStart"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        tools:ignore="RtlCompat" />




    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btntf"

        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@drawable/bg_button_blue"
        android:text="  Via Petugas"

        android:drawableLeft="@drawable/ic_professions_and_jobs"
        android:id="@+id/btnpetugas"
        android:textAlignment="textStart"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        tools:ignore="RtlCompat" />




</RelativeLayout>