<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DCDCDC"
    tools:context=".ui.sewabus.paketsewa.PaketSewaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#DCDCDC"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detail Perjalanan"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="16sp"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"

            />

        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"

            app:cardCornerRadius="10dp"

            app:cardElevation="5dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"

            android:layout_marginBottom="@dimen/activity_horizontal_margin"


            android:background="#fff"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="@dimen/activity_horizontal_margin">
                    <TextView
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:id="@+id/tv_tujuan"
                        android:textStyle="bold"

                        android:layout_alignParentStart="true"
                        android:textSize="14sp"
                        android:text="tujuan"
                        android:layout_alignParentLeft="true" />
                    <TextView
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:background="#EF9E74"
                        android:textAlignment="center"
                        android:text="Kode Pembayaran"
                        android:id="@+id/tv_kode"
                        android:layout_marginBottom="2dp"
                        android:textColor="@color/whiteTextColor"
                        android:gravity="center_horizontal" />

                    <View
                        android:id="@+id/garis"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="2dp"
                        android:layout_below="@id/tv_tujuan"
                        android:background="@color/black" />

                </RelativeLayout>



                <LinearLayout
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/garis"
                    android:weightSum="2" >


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kapasitas"
                            android:id="@+id/tv_kapasitas"
                            android:layout_margin="5dp"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kelas"
                            android:layout_margin="5dp"
                            android:id="@+id/tv_kelas"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Harga"
                            android:textStyle="bold"
                            android:id="@+id/tv_harga"
                            android:textColor="@android:color/holo_blue_dark"/>

                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>



        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Isi Form di Bawah Ini"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="16sp"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"

            tools:ignore="ObsoleteLayoutParam" />

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"

            app:cardElevation="5dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"




            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtjmlbus"
                        android:hint="Masukkan Jumlah Bus" />
                </com.google.android.material.textfield.TextInputLayout>



            </LinearLayout>



        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"

            app:cardElevation="5dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"




            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:id="@+id/date"
                    android:src="@drawable/ic_time_and_date"/>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:id="@+id/tv_berangkat"
                    android:text="Pilih Tanggal Berangkat"
                    />



            </LinearLayout>



        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"
            android:layout_marginTop="5dp"

            app:cardElevation="5dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"




            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:id="@+id/time"
                    android:src="@drawable/ic_time"/>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:id="@+id/tv_jam_berangkat"
                    android:text="Pilih Jam Berangkat"
                    />



            </LinearLayout>



        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"

            app:cardElevation="5dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"




            android:background="#fff"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="2dp"

                android:layout_marginBottom="5dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                  >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:id="@+id/maps"
                        android:src="@drawable/ic_pin"/>
                    <EditText
                        android:id="@+id/et_alamat"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top|left"
                        android:inputType="textPostalAddress|textMultiLine"
                        android:lines="20"
                        android:minLines="3"
                        android:hint="Masukkan Alamat Penjemputan"
                        android:scrollHorizontally="false"
                        android:scrollbars="vertical" />

                </LinearLayout>



<!--                <WebView-->
<!--                    android:id="@+id/wvAttribution"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginBottom="@dimen/activity_vertical_margin"-->
<!--                    tools:ignore="WebViewLayout" />-->

            </LinearLayout>





        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detail Kontak"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="16sp"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"

            tools:ignore="ObsoleteLayoutParam" />


        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            app:cardCornerRadius="10dp"

            app:cardElevation="5dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"




            android:background="#fff"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Lengkap"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="User"
                    android:id="@+id/tv_nm"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alamat Email"

                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="user@gmail.com"
                    android:textStyle="bold"
                    android:id="@+id/tv_email"
                    android:textColor="@color/black"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No HP"

                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0896"
                    android:textStyle="bold"
                    android:id="@+id/tv_nohp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detail Penumpang"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="16sp"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"

            tools:ignore="ObsoleteLayoutParam" />

        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"

            app:cardCornerRadius="10dp"

            app:cardElevation="5dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"

            android:layout_marginBottom="@dimen/activity_horizontal_margin"


            android:background="#fff"
            android:layout_height="wrap_content">
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imgseat"
                    android:src="@drawable/ic_airline_seat_recline_extra_black_24dp"/>
                <TextView
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Penumpang 1"
                    android:layout_toRightOf="@id/imgseat"
                    android:textSize="16sp"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"


                    android:textColor="@color/black"
                    android:textStyle="bold"

                    />

                <View
                    android:id="@+id/garis2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="2dp"
                    android:layout_below="@id/imgseat"
                    android:background="@color/black" />




                <Spinner
                    android:editable="false"
                    android:id="@+id/spn_id"
                    android:layout_below="@id/imgseat"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:padding="5dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_toRightOf="@id/spn_id"
                    android:layout_width="match_parent"

                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imgseat">

                    <com.google.android.material.textfield.TextInputEditText

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_noid"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:singleLine="true"
                        android:editable="false"
                        android:hint="No ID" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout

                    android:layout_width="match_parent"
                    android:id="@+id/penumpang"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/spn_id">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_nmpenumpang"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:singleLine="true"
                        android:editable="false"
                        android:hint="Nama Penumpang" />
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:justificationMode="inter_word"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/penumpang"
                    android:text="Penumpang di bawah 18 tahun dapat mengisi dengan tanggal lahir atau tanda pengenal lainnya"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background_blue"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="Lanjutkan"
            android:id="@+id/btn_lanjutkan"
            android:textColor="@color/whiteTextColor"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            />

        <TextView
            android:layout_marginStart="@dimen/activity_vertical_margin"
            android:layout_marginEnd="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*NB) Harap lakukan DP min 30% dari total pembayaran.
            Pelunas minimal 3 hari sebelum keberangkatan.
            Simpan atau screenshoot bukti pembayaran.
            Pertanyaan lebih lanjut silahkan hubungi contact person"/>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>